{
  "font_file": "src/data/font.h",
  "output_plots_dir": "plots",
  "autoencoder": {
    "sizes": [35, 32, 24, 16, 2, 16, 24, 32, 35],
    "activation": "sigmoid",
    "optimizer": "adam",
    "learning_rate": 0.000985,
    "epochs": 2000,
    "error_threshold": 5
  },
  "noise_augmentation": {
    "copies": 5,
    "stddev": 0.2,
    "binarize": true,
    "threshold": 0.5,
    "seed": 42,
    "force_change": true,
    "include_original": true
  },
  "evaluation": {
    "noise_levels": [0.1, 0.15, 0.2, 0.25, 0.3, 0.35, 0.4],
    "samples_per_level": 20,
    "example_characters": ["a", "b", "c", "d", "e", "o"]
  }
}
